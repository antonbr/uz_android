<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/backgroundColor"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <com.uzapp.view.utils.SearchEditText
            android:id="@+id/cityEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="@string/select_station_hint"
            android:padding="@dimen/big_padding"
            android:singleLine="true"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColorHint"
            android:textSize="@dimen/text_size">

            <requestFocus/>
        </com.uzapp.view.utils.SearchEditText>

        <ProgressBar
            android:id="@+id/searchProgress"
            android:layout_width="@dimen/small_progressbar_size"
            android:layout_height="@dimen/small_progressbar_size"
            android:layout_gravity="center"
            android:layout_marginRight="17dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/textColorHint"
            android:indeterminateTintMode="src_in"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/searchDividerColor"/>

    <TextView
        android:id="@+id/stationsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/big_padding"
        android:layout_marginTop="@dimen/medium_padding"
        android:text="@string/popular_destinations"
        android:textAllCaps="true"
        android:textColor="@color/accentColor"
        android:textSize="@dimen/text_size_small"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/stationsList"
        app:stackFromEnd="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>