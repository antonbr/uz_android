<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgSelectPlaceColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/toolbar_purchase" />

                <TextView
                    android:id="@+id/txtTimerPurchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:gravity="center"
                    android:text="Заполните поля имя/фамилия \nи укажите дополнительные услуги \n(багаж, чай, постель) по необходимости"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/toPayBtn"
                    style="@style/BlueButtonStyle"
                    android:layout_margin="@dimen/small_padding"
                    android:enabled="true"
                    android:text="Перейти к оплате"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/purchasesList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--<ListView-->
            <!--android:id="@+id/purchasesListView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"/>-->

    </LinearLayout>

</RelativeLayout>