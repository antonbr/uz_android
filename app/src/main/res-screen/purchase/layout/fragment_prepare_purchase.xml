<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgSelectPlaceColor">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="43dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layoutToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.uzapp.view.common.UzToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftImageRes="@drawable/back_blue"
            app:showLeftImageBtn="true"
            app:toolbarColor="@android:color/white"/>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            card_view:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTimerPurchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:gravity="center"
                    android:text="@string/tickets_information"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/toPayBtn"
                    style="@style/BlueButtonStyleSmall"
                    android:layout_margin="@dimen/small_padding"
                    android:enabled="true"
                    android:text="@string/go_to_payment"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layoutToolbar"
                android:background="@color/bgSelectPlaceColor"
                android:fillViewport="true"
                android:visibility="visible">

        <LinearLayout
            android:id="@+id/ticketsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

</RelativeLayout>