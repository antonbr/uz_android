<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_hint_color_horizontal"
        android:orientation="vertical"
        android:showDividers="middle">

        <include layout="@layout/include_btn_booking_reserve" />

        <include layout="@layout/include_ticket_info" />

        <include layout="@layout/include_edit_first_last_name" />

        <include layout="@layout/include_btn_ticket_kind" />

        <include layout="@layout/include_toggle_services" />

        <TextView
            android:id="@+id/txtDeleteTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/delete_tickets"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>
</merge>
