<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c8434a54"
    tools:context="com.uzapp.view.main.menu.MenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/backgroundColor"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLoginYourAccount"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/border_button_place_selected"
            android:text="@string/menu_login_to_your_account"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <include layout="@layout/include_fragment_menu"/>

        <include layout="@layout/include_fragment_menu_2"/>

    </LinearLayout>

</RelativeLayout>
