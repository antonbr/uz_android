<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="132dp"
        android:background="@drawable/ic_sector_pl"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/btnPlaceLowSide"
                android:layout_width="44dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="22dp"
                android:background="@drawable/border_button_place"
                android:enabled="false" />

            <Button
                android:id="@+id/btnPlaceUpperSide"
                android:layout_width="44dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/border_button_place"
                android:enabled="false" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:paddingTop="10dp"-->
            <!--android:orientation="horizontal">-->

            <RelativeLayout
                android:id="@+id/relLayoutPlaceLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp">

                <Button
                    android:id="@+id/btnPlaceLowStandardLeft"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/border_button_place"
                    android:enabled="false" />

                <Button
                    android:id="@+id/btnPlaceUpperStandardLeft"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border_button_place"
                    android:enabled="false" />
            </RelativeLayout>
            <!--</LinearLayout>-->

            <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:paddingBottom="10dp"-->
            <!--android:orientation="horizontal">-->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:paddingBottom="5dp"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/btnPlaceLowStandardRight"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:layout_marginRight="70dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/border_button_place"
                    android:enabled="false" />

                <Button
                    android:id="@+id/btnPlaceUpperStandardRight"
                    android:layout_width="70dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/border_button_place"
                    android:enabled="false" />
            </RelativeLayout>
            <!--</LinearLayout>-->

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>