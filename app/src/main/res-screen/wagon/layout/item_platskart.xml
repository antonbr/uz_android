<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="132dp"
    android:background="@drawable/ic_sector_pl"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btnPlaceLowSide"
            style="@style/PlaceButtonStyle"
            android:layout_width="44dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="22dp"/>

        <Button
            android:id="@+id/btnPlaceUpperSide"
            style="@style/PlaceButtonStyle"
            android:layout_width="44dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relLayoutPlaceLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/btnPlaceLowStandardLeft"
            style="@style/PlaceButtonStyle"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnPlaceUpperStandardLeft"
            style="@style/PlaceButtonStyle"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="5dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btnPlaceLowStandardRight"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            style="@style/PlaceButtonStyle"/>

        <Button
            android:id="@+id/btnPlaceUpperStandardRight"
            android:layout_width="70dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            style="@style/PlaceButtonStyle"/>
    </RelativeLayout>
</RelativeLayout>