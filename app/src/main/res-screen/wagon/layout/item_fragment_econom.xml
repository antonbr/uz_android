<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:background="@drawable/sector_platskart"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/btnPlaceUpperSide"
                android:layout_width="70dp"
                android:background="@drawable/border_button_place"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" />

            <Button
                android:id="@+id/btnPlaceLowSide"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:background="@drawable/border_button_place"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPlaceLowStandardLeft"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:background="@drawable/border_button_place"/>

                <Button
                    android:id="@+id/btnPlaceUpperStandardLeft"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/border_button_place"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPlaceLowStandardRight"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:background="@drawable/border_button_place"/>

                <Button
                    android:id="@+id/btnPlaceUpperStandardRight"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/border_button_place"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>