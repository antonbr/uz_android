<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.uzapp.view.main.wagon.fragment.WagonPlaceFragment">

    <android.support.design.widget.AppBarLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                                android:id="@+id/layoutToolbar"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="@color/lightColor">

        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.uzapp.view.common.UzToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:leftImageRes="@drawable/back_blue"
                app:title=""
                app:showLeftImageBtn="true"/>

            <TextView
                android:id="@+id/txtWagonNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:textColor="@color/textColorGrey"
                android:textSize="16sp"
                android:textStyle="normal"/>

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <!--<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
