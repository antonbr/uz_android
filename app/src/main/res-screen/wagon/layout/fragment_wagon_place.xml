<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uzapp.view.wagon.fragment.WagonPlaceFragment">

    <include
        android:id="@+id/layoutToolbar"
        layout="@layout/toolbar_back" />

    <RelativeLayout
        android:id="@+id/containerTopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutToolbar">

        <LinearLayout
            android:id="@+id/layoutBuyReserveTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <include layout="@layout/include_buy_reserve" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutFilterPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:visibility="gone">

            <include layout="@layout/include_filter_wagon" />

        </LinearLayout>

    </RelativeLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgSelectPlaceColor"
        android:layout_below="@+id/containerTopLayout"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/layoutWagon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/head_platskart_ru"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/txtWagonNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="35dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/footer_platskart_ru">

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <SlidingDrawer
        android:id="@+id/slidingDrawer"
        android:layout_width="match_parent"
        android:layout_height="110dip"
        android:layout_alignParentBottom="true"
        android:content="@+id/horizontalRecyclerView"
        android:handle="@+id/slidePanelFooter">

        <ImageButton
            android:id="@+id/slidePanelFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgSlidePanelFooterColor"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:src="@drawable/ic_footer_up" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/horizontalRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff" />

    </SlidingDrawer>

</RelativeLayout>

