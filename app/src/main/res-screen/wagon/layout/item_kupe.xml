<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="132dp"
              android:background="@drawable/ic_sector_lux"
              android:orientation="vertical"
              android:paddingLeft="50dp"
              android:paddingRight="50dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/btnPlaceLowStandardLeft"
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            android:layout_marginTop="12dp"
            style="@style/PlaceButtonStyle"/>

        <Button
            android:id="@+id/btnPlaceUpperStandardLeft"
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            style="@style/PlaceButtonStyle"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="5dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btnPlaceLowStandardRight"
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            style="@style/PlaceButtonStyle"/>

        <Button
            android:id="@+id/btnPlaceUpperStandardRight"
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            style="@style/PlaceButtonStyle"/>
    </RelativeLayout>
</LinearLayout>