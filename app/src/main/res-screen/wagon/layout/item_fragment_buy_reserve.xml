<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/bgViewLine"
            android:text="Вагон " />

        <TextView
            android:id="@+id/txtWagonNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/accentColor"
            android:textAllCaps="true"
            android:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/bgViewLine"
            android:text=", место " />

        <TextView
            android:id="@+id/txtPlaceNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/accentColor"
            android:textAllCaps="true"
            android:text="11" />

        <TextView
            android:id="@+id/txtUpperLowerShelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/bgViewLine"
            android:text=", нижнее" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPriceTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accentColor"
                android:textStyle="bold"
                android:textSize="11sp"
                android:text="price" />

            <ImageButton
                android:id="@+id/imgBtnRemoveTicket"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_remove_ticket"
                android:maxWidth="15dp"
                android:maxHeight="15dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>