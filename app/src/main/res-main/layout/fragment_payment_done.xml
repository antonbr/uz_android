<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uzapp.view.main.purchase.fragment.PaymentDoneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="42dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/thank_you_for_your_purchase"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="13dp"
            android:text="@string/tickets_sent_to_your_email"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="118dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="27dp"
            android:src="@drawable/ic_payment_done"/>

        <Button
            android:id="@+id/btnGoMyTicket"
            style="@style/BlueButtonStyle2"
            android:layout_margin="20dp"
            android:text="@string/go_to_my_tickets"/>

